
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
@if (ViewBag.Message is not null)
{
    <div class="alert alert-info" role="alert">
        @ViewBag.Message
    </div>
}
<div class="row">
    <div class="col-md-5 offset-md-4 my-5">
        <h1>Kullanıcı Giriş Formu</h1>

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
        </div>
        <form method="post">
            <div class="mb-3">
                <label for="Email" class="form-label" >Email</label>
                <input name="email" type="email" class="form-control">
            </div>
            <div class="mb-3">
                <label for="Password" class="form-label">Password</label>
                <input name="password" value="Password12*" type="password" class="form-control">
            </div>
            <div class="row text-center">
                <div class="form-group">
                    <button type="submit" class="btn btn-outline-primary btn-lg w-100">Üye Girişi</button>
                </div>
            </div>
        </form>
    </div>
</div>
